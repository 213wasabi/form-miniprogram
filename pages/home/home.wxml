<cu-custom bgColor="bg-gradual-green">
  <view slot="content">办公助手</view>
</cu-custom>
  <!-- 用户 openid -->
  <view class="userinfo">
    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo"
      class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})"
      size="default"
    ></button>
  </view>

  <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
    <view class="cu-item arrow">
      <view class="content" bindtap="CopyLink" data-link="开票信息">
        <text class="cuIcon-writefill text-grey"></text>
        <text class="text-grey">复制公司开票信息</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <navigator class="content" url="/pages/geren/geren" hover-class="none">
        <text class="cuIcon-formfill text-green"></text>
        <text class="text-grey">个人信息</text>
      </navigator>
    </view>
     <view class="cu-item arrow">
      <navigator class="content" url="/pages/user/user" hover-class="none">
        <text class="cuIcon-formfill text-blue"></text>
        <text class="text-grey">家庭信息</text>
      </navigator>
    </view>
     <view class="cu-item arrow">
      <navigator class="content" url="/pages/hodong/hodong" hover-class="none">
        <text class="cuIcon-repairfill text-brown"></text>
        <text class="text-grey">活动报名</text>
      </navigator>
    </view>
        <view class="cu-item arrow">
      <view class="content" bindtap="showQrcode">
        <text class="cuIcon-appreciatefill text-red"></text>
        <text class="text-grey">赞赏支持</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <navigator class="content" url="/pages/about/about/about" hover-class="none">
        <text class="cuIcon-creativefill text-yellow"></text>
        <text class="text-grey">关于办公助手</text>
      </navigator>
    </view>
  </view>
